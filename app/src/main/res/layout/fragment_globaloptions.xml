<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent" android:layout_height="match_parent">

    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:shrinkColumns="1"
        android:stretchColumns="1">

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="4dp">

            <TextView
                android:text="@string/lb_options_service"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/textView11"
                android:layout_gravity="center_vertical"/>

            <CheckBox
                android:text="@string/lb_options_service_cb"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/cb_options_service"
                android:layout_gravity="center_vertical"
                android:layout_weight="1"/>

        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="4dp"
            >

            <Space
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <TextView
                android:text="@string/lb_options_service_info"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:id="@+id/textView15"
                android:textSize="10sp"
                android:layout_weight="1"
                android:paddingLeft="8dp"/>
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="4dp">

            <TextView
                android:text="@string/lb_options_broadcast"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/textView12"
                android:layout_gravity="center_vertical"/>

            <CheckBox
                android:text="@string/lb_options_broadcast_cb"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:id="@+id/cb_options_broadcast"
                android:layout_gravity="center_vertical"
                android:layout_weight="1"/>
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="4dp"
            android:visibility="gone"><!-- Currently unused, may be reused if single messages shall be sent -->

            <Space
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="horizontal"
                android:paddingLeft="8dp">

                <EditText
                    android:id="@+id/txt_options_broadcast_codes"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_weight="1"
                    android:ems="10"
                    android:hint="@string/lb_options_broadcast_codes"
                    android:inputType="text|textNoSuggestions"
                    android:textSize="14sp"
                    android:typeface="monospace" />

                <ImageButton
                    android:id="@+id/btn_options_broadcast_codes_revert"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_gravity="center_vertical"
                    android:layout_weight="0"
                    android:src="@android:drawable/ic_menu_revert" />

            </LinearLayout>

        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="4dp">

            <TextView
                android:text="@string/lb_options_commands"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/textView14"
                android:layout_gravity="center_vertical"/>

            <CheckBox
                android:text="@string/lb_options_commands_cb"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:id="@+id/cb_options_commands"
                android:layout_gravity="center_vertical"
                android:layout_weight="1"/>
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="4dp">

            <TextView
                android:text="@string/lb_options_apikey"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="monospace"
                android:textIsSelectable="true"
                android:selectAllOnFocus="true"
                android:padding="10dp"
                android:id="@+id/tv_options_apikey"
                android:text="12345678901234567890" />

        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="4dp">

            <Space
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <FrameLayout>
                <Button
                    android:text="@string/lb_options_apikey_renew"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/cb_options_apikey_renew"
                    android:layout_gravity="center_vertical" />
            </FrameLayout>

        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="4dp">

            <Space
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <TextView
                android:text="@string/lb_options_broadcast_info"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:id="@+id/txt_options_broadcast_info"
                android:textSize="10sp"
                android:layout_weight="1"
                android:paddingLeft="8dp"
                />

        </TableRow>


    </TableLayout>

</ScrollView>
