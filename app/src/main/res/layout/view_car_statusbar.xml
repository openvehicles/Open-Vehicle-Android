<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:layout_width="match_parent" android:layout_height="wrap_content"
	android:gravity="center_vertical"
	android:paddingLeft="4dp" android:paddingRight="4dp"
	android:orientation="horizontal">

	<TextView
        android:id="@+id/txt_parked_time"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:drawablePadding="4dp"
        android:drawableLeft="@drawable/ic_parking"
        android:textAppearance="?android:textAppearanceSmall"
        android:gravity="center_vertical"
        android:textColor="#FFF" />
    
    <ImageView
        android:id="@+id/img_car_connection"
        android:layout_width="28dp"
        android:layout_height="28dp"
        android:src="@drawable/connection_unknown"/>
    
    <TextView
        android:id="@+id/txt_last_updated"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:textAppearanceSmall"
        android:gravity="center_vertical"
        android:paddingRight="8dp"
        android:textColor="#FFF" />
    
    <ImageView
        android:id="@+id/img_signal_rssi"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:src="@drawable/signal_strength_0"/>

</LinearLayout>