<?xml version="1.0" encoding="UTF-8"?>
<resources>
    <item type="id" name="content"/>
	<style name="Theme.App" parent="Theme.AppCompat" >
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:colorBackground">@color/colorBackground</item>
        <item name="android:colorForeground">@color/colorForeground</item>
        <item name="android:windowBackground">@color/colorBackground</item>
        <item name="android:dropDownListViewStyle">@style/PopupMenuListView</item>
        <item name="dropDownListViewStyle">@style/PopupMenuListView</item>
    </style>

    <style name="Theme.AppDialog" parent="Theme.AppCompat.Dialog.MinWidth" >
        <item name="android:windowTitleStyle">@style/Theme.AppDialog.DialogWindowTitle</item>
    </style>
    <style name="Theme.AppDialog.DialogWindowTitle" parent="RtlOverlay.DialogWindowTitle.AppCompat">
        <item name="android:padding">20px</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="PopupMenuListView" parent="@style/Widget.AppCompat.ListView.DropDown">
        <item name="android:background">@color/colorPrimary</item>
        <item name="background">@color/colorPrimary</item>
    </style>

	<style name="SOCOverlayText">
        <item name="android:paddingLeft">4px</item>
        <item name="android:paddingBottom">4px</item>
        <item name="android:textColor">#ffffffff</item>
        <item name="android:textSize">20sp</item>
        <item name="android:shadowColor">#000000</item>
        <item name="android:shadowDx">1</item>
        <item name="android:shadowDy">1</item>
        <item name="android:shadowRadius">1</item>
    </style>
    
    <style name="TabCarImgCar">
        <item name="android:layout_width">304px</item>
        <item name="android:layout_height">606px</item>
        <item name="android:layout_x">114px</item>
        <item name="android:layout_y">0px</item>
    </style>
    
    <style name="TabCarImgLetterBox">
        <item name="android:layout_width">534px</item>
        <item name="android:layout_height">610px</item>
        <item name="android:layout_x">0px</item>
        <item name="android:layout_y">75px</item>
    </style>
    
    <style name="TabCarTextBox">
        <item name="android:layout_width">104px</item>
        <item name="android:layout_height">34px</item>
        <item name="android:textSize">20px</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="TabCarTextOverlay">
        <item name="android:textColor">#ffffffff</item>
        <item name="android:shadowColor">#000000</item>
        <item name="android:shadowDx">0</item>
        <item name="android:shadowDy">0</item>
        <item name="android:shadowRadius">3</item>
    </style>

    <style name="TextValue" parent="@android:style/Widget.TextView">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    	<item name="android:background">@android:drawable/edit_text</item>
        <item name="android:textColor">@android:color/black</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:textAppearance">?android:textAppearanceMedium</item>
    </style>
    	

</resources>